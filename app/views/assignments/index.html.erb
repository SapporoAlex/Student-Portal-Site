<div class="section">
    <h1>Assignments</h1>
    <p>Welcome <%= current_user.email %>!</p>
    <ul>
    <% @assignments.each do |assignment| %>
    <div class="assignment-info-box">
        <% if current_user.student? && assignment.uploads.any? %>
            <div><h2>🗹 Assignment Complete</h2>
            </div>
        <% elsif current_user.student? && assignment.uploads.none? %>
            <div><h2>☐ Assignment Incomplete</h2>
            </div>
        <% end %>
        <li><p>Assignment: <%= link_to assignment.title, assignment_path(assignment) %></p><p>Due date: <%= assignment.due_date %></p></li>
    </div>
    <% end %>
    </ul>


    <% if current_user.admin? %>
        <div id="create-new-button">
        <%= link_to "Create new assignment", new_assignment_path, class: "button-link" %>
        </div>
    <% end %>
</div>

